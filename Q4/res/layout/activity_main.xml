<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/myBlue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/moobchi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7e7e7"
        android:padding="10dp" >

        <com.example.customviews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="نتایج"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a2a2a2"
            android:textSize="19sp"
            android:textStyle="bold" />

        <com.example.customviews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="موبچـــــــی"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/myBlue"
            android:textSize="19sp"
            android:textStyle="bold" />

        <com.example.customviews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="موبایل یاب"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a2a2a2"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:background="@drawable/tile_back" >

                <View
                    android:id="@+id/textView1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/big_white" />

                <com.example.customviews.MyTextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mid_blue"
                    android:gravity="center"
                    android:lines="2"
                    android:text="از گوشی خود \n چه می خواهید؟"
                    android:textColor="#FFF"
                    android:textSize="22sp" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_above="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-30dp"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="1"
                    android:textOn="وب گردی"
                    android:textOff="وب گردی"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="2"
                    android:textOn="کاربری \n خاص"
                    android:textOff="کاربری \n خاص"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-30dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="2"
                    android:textOn="برند های \n چینی"
                    android:textOff="برند های \n چینی"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="-30dp"
                    android:layout_toLeftOf="@+id/textView1"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="2"
                    android:textOn="بازی و \n سرگرمی"
                    android:textOff="بازی و \n سرگرمی"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignTop="@+id/textView1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="1"
                    android:textOn="عکاسی"
                    android:textOff="عکاسی"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_alignTop="@+id/textView1"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="1"
                    android:textOn="تبلت"
                    android:textOff="تبلت"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="2"
                    android:textOn="دو \n سیمکارت"
                    android:textOff="دو \n سیمکارت"
                    android:textColor="#FFF" />

                <com.example.customviews.MyToggleButton
                    android:id="@+id/textView10"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/small_circle"
                    android:gravity="center"
                    android:lines="1"
                    android:textOn="کسب و کار"
                    android:textOff="کسب و کار"
                    android:textColor="#FFF" />
            </RelativeLayout>

            <com.example.customviews.MyTextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بر اساس قیمت"
                android:layout_gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </FrameLayout>

                <com.example.customviews.MyTextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/frame"
                    android:text="0 تومان" />

                <com.example.customviews.MyTextView
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/frame"
                    android:text="20000000 تومان" />
            </RelativeLayout>

            <TextView
                android:id="@+id/find"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#0caf30"
                android:textSize="20sp"
                android:text="بجور"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DADADA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                 >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart" />

                    <com.example.customviews.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="علاقه مندی ها" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home" />

                    <com.example.customviews.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ترین ها" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/moob" />

                    <com.example.customviews.MyTextView
                        android:layout_width="wrap_content"
                       	android:textColor="@color/myBlue"
                        android:layout_height="wrap_content"
                        android:text="موبچی" />

                </LinearLayout>

            </RelativeLayout>
            
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>